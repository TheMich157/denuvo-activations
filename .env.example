# Required
DISCORD_TOKEN=your_bot_token
DISCORD_CLIENT_ID=your_application_id
ACTIVATOR_ROLE_ID=role_id_for_activators
TICKET_CATEGORY_ID=category_id_for_ticket_channels

# Optional: restrict activator commands to that role (set to your server's guild ID)
 GUILD_ID=1469372778980315230

# Required for automated credentials (add game with Steam account)
ENCRYPTION_KEY=64_char_hex_key  # node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DAILY_ACTIVATION_LIMIT=5
POINTS_PER_ACTIVATION=50  # Points staff earn per activation completed (users not charged)
RESTOCK_HOURS=24  # Auto-restore 1 stock per used slot after this many hours

# Optional: ticket auto-close
# TICKET_VERIFY_DEADLINE_MINUTES=5
# TICKET_AUTOCLOSE_COOLDOWN_HOURS=24
# TICKET_AUTOCLOSE_CHECK_INTERVAL_MS=60000

# Optional: audit logging channel (activation completed, ticket auto-closed, request failed)
# LOG_CHANNEL_ID=1469597575211389040

# Optional: drm.steam.run automation (requires: npm install playwright)
 DRM_BASE_URL=https://drm.steam.run
 DRM_TIMEOUT_MS=60000
 DRM_HEADLESS=1
 DRM_CODE_OUTPUT_TIMEOUT_MS=15000
 DRM_USER_AGENT= (default Chrome)
DRM_BROWSER_ARGS= (space-separated extra args for Chromium)
 DRM_SELECTOR_* overrides: LOGIN, USERNAME, PASSWORD, STEAM_SUBMIT, 2FA, GAME_ID, EXTRACT, FILL, SUBMIT, CODE

# Optional: stock restock check interval (ms; default 900000 = 15 min)
# STOCK_RESTOCK_CHECK_INTERVAL_MS=900000

# Optional: AI screenshot verification (uses Groq Llama Vision; falls back to Tesseract if not set)
# GROQ_API_KEY=gsk_...
 GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct  # or llama-4-maverick-17b-128e-instruct

# Optional: review channel — ratings are posted here as review embeds
# REVIEW_CHANNEL_ID=1469622725302550609

# Optional: manifest channel — users send Steam App IDs here to download manifests
# MANIFEST_CHANNEL_ID=1469623406898184295
# RYUU_API_KEY=your_ryuu_api_key

# Optional: preorder system — game preorders with Ko-fi donation verification
# PREORDER_CHANNEL_ID=channel_id   # channel where preorder posts are created
# TIP_VERIFY_CHANNEL_ID=channel_id  # channel where users post donation proof screenshots
# KOFI_URL=https://ko-fi.com/denubrew  # Ko-fi page link
# MIN_DONATION=5                    # minimum donation in $ (default: 5)

# Optional: database auto-backup
# BACKUP_INTERVAL_HOURS=6   # backup every 6 hours (default)
# MAX_BACKUPS=10             # keep last 10 backups (default)
